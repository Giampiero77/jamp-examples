			</tab2>
			<tab3 typeobj="tab" label="Formattazione date" >
				<date0 typeobj="textarea" dsobj="ds1" dsitem="date1" label="Formato originale(EN|yyyy-mmm-dd):\n" cols="50" rows="3" />
				<date1 typeobj="textarea" dsobj="ds1" dsitem="date1" label="\nFormato uscita(IT|dd/mmm/yyyy)\n" format="date|EN|yyyy-mmm-dd|IT|dd/mmm/yyyy" readonly="true" cols="50" rows="3" />
				
				<date2 typeobj="textarea" dsobj="ds1" dsitem="date1" label="\nFormato uscita(EN|mm/dd/yyyy)\n" format="date|EN|yyyy-mmm-dd|EN|mm/dd/yyyy" readonly="true" cols="50" rows="3" />
				
