<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE jamp PUBLIC "jamp" "http://jamp.alyx.it/jamp.dtd">
<jamp>
	<page id="page" title="JAMP - Esempio transazione AJAX personalizzata" icon="../../favicon.ico" loaddata="false">
		<fieldset id="fieldset1" legend="Result" style="float: left; width: 200px; height: 90px;">
			<text id="number1" label="number1: " value="5" minlength="1" maxlength="3" keypress="number" size="5" style="margin-left: 5px; font-weight: bold; font-size: 1em;" labelwidth="90px" />
			<text id="number2" label="number2: " value="3" minlength="1" maxlength="3" keypress="number" size="5" style="margin-left: 5px; font-weight: bold; font-size: 1em;" labelwidth="90px" />
			<hr id="hr" />
			<label id="result" label="result: " value="" style="margin-left: 5px; font-weight: bold; font-size: 1em;" />
		</fieldset>
		<fieldset id="fieldset2" legend="Action" style="float: left; width: 150px; height: 90px;">
			<button id="button1" value="Addition" onclick="javascript: sendRequest('addition');" style="width: 140px" />
			<button id="button2" value="Subtraction" onclick="javascript: sendRequest('subtraction');" style="width: 140px" />
			<button id="button3" value="Multiplication" onclick="javascript: sendRequest('multiplication');" style="width: 140px" />
		</fieldset>
	</page>
</jamp>
