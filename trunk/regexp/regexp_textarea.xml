<?xml version="1.0" encoding="utf-8"?>
<jamp>
	<page id="page" title="JAMP - Esempio d'uso delle espressioni regolari" icon="../../favicon.ico" loaddata="true">
		<tabs id="tabs1" width="600px" height="600px" selected="tab1" align="left">
			<tab id="tab1" label="Espressioni regolari(SUL SINGOLO CARATTERE)">
				<textarea id="digit_number" label="\nSolo caratteri numerici:\n" keypress="number" cols="50" rows="3" />
				<textarea id="digit_nonumber" label="\nEscluso caratteri numerici:\n" keypress="nonumber" cols="50" rows="3" />
				<textarea id="digit_alphanumeric" label="\nSolo caratteri alphanumerici:\n" keypress="alphanumeric" cols="50" rows="3" />
				<textarea id="digit_noalphanumeric" label="\nEscluso caratteri alphanumerici:\n" keypress="noalphanumeric" cols="50" rows="3" />
				<textarea id="digit_alphabetic" label="\nSolo caratteri alfabetici:\n" keypress="alphabetic" cols="50" rows="3" />
				<textarea id="digit_loweralphabetic" label="\nSolo caratteri alfabetici minuscoli:\n" keypress="loweralphabetic" cols="50" rows="3" />
				<textarea id="digit_upperalphabetic" label="\nSolo caratteri alfabetici maiuscoli:\n" keypress="upperalphabetic" cols="50" rows="3" />
				<textarea id="digit_decimal" label="\nSolo caratteri decimali(separatori miglia e decine compresi):\n" keypress="decimal" cols="50" rows="3" />
				<textarea id="digit_free" label="\nEspessione regolare libera(esempio: solo lettere dalla a alla g):\n" keypress="[a-g]" cols="50" rows="3" />
			</tab>
			<tab id="tab2" label="Espressioni regolari(SULLA STRINGA)">
				<textarea id="word_number" label="\nSolo caratteri numerici:\n" blur="number" cols="50" rows="3" />
				<textarea id="word_decimal" label="\nSolo caratteri decimali:\n" blur="decimal" cols="50" rows="3" />
				<textarea id="word_ip" label="\nIndirizzo IP:\n" blur="ip" cols="50" rows="3" />
				<textarea id="word_email" label="\nIndirizzo e-mail:\n" blur="email" cols="50" rows="3" />
				<textarea id="word_cf" label="\nCodice fiscale:\n" blur="cf" cols="50" rows="3" />
				<textarea id="word_complete" label="\nMulti controllo(alfanumerici, codice fiscale, minimo 16, massimo 16):\n" blur="cf" keypress="alphanumeric" minlength="16" maxlength="16" cols="50" rows="3" />
				<textarea id="word_free" label="\nEspressione regolare libera(esempio: solo numeri da 0 a 4):\n" blur="^[0-4]{0,}$" cols="50" rows="3" />
			</tab>
		</tabs>
	</page>
</jamp>
